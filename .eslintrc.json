{
    "extends": "standard",
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [ "html", "standard" ],
    "rules": {
		"eqeqeq": 2,
        "indent": ["error", "tab", {"SwitchCase": 1}],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-empty": 2,
        "no-eq-null": 2,
		"no-new": 0,
		"no-tabs": 0,
        "no-fallthrough": 0,
        "no-unreachable": 0
    }
}
